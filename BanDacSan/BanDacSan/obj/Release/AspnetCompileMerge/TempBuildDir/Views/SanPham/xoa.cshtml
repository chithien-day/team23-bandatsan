@model BanDacSan.Models.SanPham

@{
    ViewBag.Title = "xoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa sản phẩm</h2>

<h3>Bạn có chắc muốn xóa sản phẩm này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID Vùng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IDVung)
        </dd>

        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSanPham)
        </dd>

        <dt>
            Giá tiền
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GiaTien)
        </dd>

        <dt>
            Số lượng tồn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Hình Ảnh
        </dt>

        <dd>
            <img src="@Model.HinhAnh" alt="hinh thumbnail" width="400" height="250" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa sản phẩm" class="btn btn-danger" /> |
                @Html.ActionLink("Trở về trang danh sách sản phẩm", "ListSanPham")
        </div>
    }
</div>
